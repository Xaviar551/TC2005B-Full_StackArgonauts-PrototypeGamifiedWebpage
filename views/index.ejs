	<section class="wrapper">
		<div class="one-home">
			<div id="piechart" style="width: 640px; height: 360px;"></div>
		</div>
		<div class="two-home">
			<div id="Histogram" style="width: 640px; height: 360px;"></div>
		</div>
	</section>
	<div id="Line-chart" style="width: 950px; height: 484px;"></div>

<!-- Script -->
<script src="https://www.gstatic.com/firebasejs/8.3.3/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/8.3.3/firebase-auth.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="js/index.js"></script>
<script>
	let chartsLoadPromise = google.charts.load('current', {'packages':['corechart']});
	/* because google.charts.load return a promise we can draw once the load finish
	chartsLoadPromise.then(_result => {
		drawChart()
	})
	.catch(err => {
		console.error(err)
	}) */

	// once google.charts.load finish setOnLoadCallback will execute function argument call back
	google.charts.setOnLoadCallback(Pie_drawChart(JSON.parse('<%- JSON.stringify(ID_creator_proyect.employees) %>')));
	google.charts.setOnLoadCallback(Histogram_drawChart(JSON.parse('<%- JSON.stringify(Issue_total.Estatus_total) %>')));
	google.charts.setOnLoadCallback(Line_drawChart(JSON.parse('<%- JSON.stringify(Not_closed.Not_closed_total) %>')));
</script>
</body> 
</html>
